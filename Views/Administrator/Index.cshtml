@model IEnumerable<StudentAdministrator>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Student Administrator List</h2>
        </div>
        <div class="col-6">
            Add New Student Administrator
        </div>
    </div>
    <br /><br />

    <table class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Contact Number
                </th>
                <th>

                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>
                        @obj.FirstName
                    </td>
                    <td>
                        @obj.LastName
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.ContactNumber
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Student" asp-action="Edit" asp-route-id="@obj.AdministratorId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.AdministratorId" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>&nbsp;Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
